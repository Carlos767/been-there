<h1>Create a new Location</h1>

<%= form_tag "/article", :class => "form-horizontal", method: :post, multipart: true do %>

  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="title" placeholder="Title">
    </div>
  </div>

  <div class="form-group">
    <label for="body" class="col-sm-2 control-label">Location</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="location" placeholder="Write your experience here">
    </div>
  </div>
  <div class="form-group">
    <label for="body" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="body" placeholder="What did you do?">
    </div>
  </div>

  <div class="form-group">
    <button for="image" class="col-sm-2 control-label">Upload image</button> 
    <div class="col-sm-10">
      <input type="image" class="form-control" name="image" placeholder="add your image here">
      <%= file_field_tag :image, accept: 'image/*;capture=camera' %>
    </div>
  </div>

  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">User ID</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="user_id" placeholder="User ID">
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit a new location</button>
    </div>
  </div>
<% end %>

